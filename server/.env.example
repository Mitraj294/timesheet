# Environment Configuration Example
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in your actual values


# DATABASE

# Use different databases for each environment:
# - Development: timesheet_dev
# - Staging: timesheet_staging  
# - Production: timesheet_production
# - Testing: timesheet_e2e_test
MONGO_URI=mongodb+srv://username:password@cluster0.xhf27.mongodb.net/database_name?retryWrites=true&w=majority&appName=Cluster0


# SERVER

PORT=5000
NODE_ENV=development # Options: development | staging | production | test
BASE_API_URL=/api


# SECURITY

# Generate a strong secret: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_here_minimum_64_characters_long


# URLs

CLIENT_BASE_URL=https://localhost:3000
REACT_APP_API_URL=https://localhost:5000/api


# EMAIL (SMTP)

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM="App Name" <your_email@gmail.com>


# CRON JOBS

# Weekly reports (default: Saturday 7 PM IST)
WEEKLY_REPORT_CRON_SCHEDULE="00 19 * * 6"

# Notification scheduler (default: every minute)
NOTIFICATION_SCHEDULER_CRON="* * * * *"

# Server timezone for cron jobs
SERVER_TIMEZONE="Asia/Kolkata"

# Enable/disable cron jobs (true/false)
ENABLE_CRON_JOBS=true


# BATCH PROCESSING

MAX_NOTIFICATIONS_PER_RUN=500
NOTIFICATION_BATCH_SIZE=10


# MONITORING (SENTRY)

SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_TRACES_SAMPLE_RATE=0.1 # 0.0 to 1.0 (10% recommended for production)
SENTRY_ENABLE=true # true | false


# LOGGING

LOG_LEVEL=info # debug | info | warn | error
ENABLE_REQUEST_LOGGING=true # true | false (disable in production for performance)
