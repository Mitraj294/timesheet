{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "nodemon index.js",
    "server": "nodemon server",
    "client": "npm start --prefix ../client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --forceExit",
    "test:single": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration/test.integration.test.js --runInBand --detectOpenHandles --forceExit",
    "e2e": "NODE_ENV=test node server.js"
  },
  "dependencies": {
    "@sentry/node": "^9.30.0",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.6.1",
    "moment-timezone": "^0.6.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.1",
    "node-cron": "^4.1.0",
    "nodemailer": "^7.0.3",
    "pdfkit": "^0.17.1",
    "spawn-command": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "babel-jest": "^30.0.0",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  }
}
